<!DOCTYPE html>
<html lang="en">
<head>
<title>Cognative Company</title>
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<!-- Bootstrap core CSS -->
<link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap theme -->
<link href="/bootstrap/css/bootstrap-theme.min.css" rel="stylesheet">
<!-- Custom CSS -->
<link href="/static/css/style.css" rel="stylesheet">
</head>
<body>
<h1 class="text-uppercase">Cognative Company</h1>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Source String</h3>
  </div>
  <div class="panel-body">
    <form action="/api/v1/translate/" method="GET">
      <div class="form-group">
        <label for="sourceStr">Enter Source String</label>
        <input name="sourceText" maxlength="1000" required class="form-control" id="sourceStr" aria-describedby="sourceStrHelp" />
        <small id="sourceStrHelp" class="form-text text-muted">Enter Source String in English (less than 1000 characters)</small>
      </div>

      <div class="form-group">
        <label for="destLangCode">Destination Language</label>
        <select name="destinationLanguageCode" class="form-control" id="destLangCode" aria-describedby="destLangHelp">
          <option value="es">Spanish</option>
          <option value="po">Portuguese</option>
          <option value="fr">French</option>
          <option value="ge">German</option>
          <option value="it">Italian</option>
          <option value="ar">Arabic</option>
        </select>
        <small id="destLangHelp" class="form-text text-muted">Enter the translated language</small>
      </div>

      <button type="submit" class="btn btn-primary">Translate & Analyze</button>
      <a href="#" class="btn btn-primary" onClick="location.reload()">Reset</a>
    </form>
  </div>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">History</h3>
  </div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <th>Source Text</th>
          <th>Destination Language</th>
          <th>Translated Text</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(function (row) {%><tr>
          <td><%= row.sourceText %></td>
          <td><%= row.destinationLanguage %></td>
          <td><%= row.translatedText %></td>
        </tr><% }) %>
      </tbody>
    </table>
  </div>
</div>
</body>
</html>
