<!DOCTYPE html>
<html lang="en">
<head>
<title>Cognative Company</title>
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<!-- Bootstrap core CSS -->
<link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap theme -->
<link href="/bootstrap/css/bootstrap-theme.min.css" rel="stylesheet">
<!-- Custom CSS -->
<link href="/static/css/style.css" rel="stylesheet">
</head>
<body>
<h1 class="text-uppercase">Cognative Company</h1>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Results</h3>
  </div>
  <div class="panel-body">
    <h4>Source Text: "<%= data.sourceText %>"</h4>
    <h4>Translated Text (<%= data.destinationLanguage %>): "<%= data.translatedText %>"</h4>
    <table class="table">
      <thead>
        <tr>
          <th>Social Tone</th>
          <th>Value for Source</th>
          <th>Value for Translation</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<data.sourceTextTone.length; i++) {%><tr>
          <td><%= data.sourceTextTone[i].tone_name %></td>
          <td><%= data.sourceTextTone[i].score %></td>
          <td><%= data.translatedTextTone[i].score %></td>
        </tr><% } %>
      </tbody>
    </table>
    <a href="/api/v1/history/"><button class="btn btn-primary">Return</button></a>
  </div>
</div>

</body>
</html>
